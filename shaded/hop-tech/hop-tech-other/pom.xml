<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apache.hop</groupId>
        <artifactId>hop-tech</artifactId>
        <version>2.13.0-SNAPSHOT</version>
    </parent>

    <artifactId>hop-tech-other</artifactId>
    <packaging>pom</packaging>

    <dependencies>
        <dependency>
            <groupId>org.apache.hop</groupId>
            <artifactId>hop-tech-deps</artifactId>
            <type>pom</type>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.hop</groupId>
                    <artifactId>hop-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.hop</groupId>
                    <artifactId>hop-ui</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.hop</groupId>
                    <artifactId>hop-plugins-tech-aws</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.hop</groupId>
                    <artifactId>hop-plugins-tech-azure</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.hop</groupId>
                    <artifactId>hop-plugins-tech-cassandra</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.hop</groupId>
                    <artifactId>hop-plugins-tech-google</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.hadoop</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <configuration>
                    <artifactSet>
                        <excludes>
                            <exclude>com.fasterxml.jackson*:*</exclude>
                            <exclude>commons-*:*</exclude>
                            <exclude>javax.annotation:*</exclude>
                            <exclude>org.apache.commons:*</exclude>
                            <exclude>org.slf4j:*</exclude>
                        </excludes>
                    </artifactSet>
                    <filters>
                        <filter>
                            <artifact>*:*</artifact>
                            <excludes>
                                <exclude>META-INF/DEPENDENCIES</exclude>
                                <exclude>META-INF/LICEN*</exclude>
                                <exclude>META-INF/MANIFEST.MF</exclude>
                                <exclude>META-INF/NOTICE*</exclude>
                            </excludes>
                        </filter>
                        <filter>
                            <artifact>org.apache.parquet:parquet-avro</artifact>
                            <excludes>
                                <exclude>shaded/parquet/it/unimi/dsi/fastutil/**/*</exclude>
                            </excludes>
                        </filter>
                        <filter>
                            <artifact>org.apache.parquet:parquet-hadoop</artifact>
                            <excludes>
                                <exclude>shaded/parquet/it/unimi/dsi/fastutil/**/*</exclude>
                                <exclude>META-INF/maven/net.openhft/**/*</exclude>
                            </excludes>
                        </filter>
                    </filters>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
